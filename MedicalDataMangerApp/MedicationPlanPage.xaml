<Page x:Class="MedicalDataMangerApp.MedicationPlanPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:MedicalDataMangerApp"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Title="MedicationPlanPage"
      d:DesignHeight="300"
      d:DesignWidth="300"
      mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <Button Margin=" 0 10 0 0" Content="Add"  Click="AddMedPlanItem"/>
            <DataGrid ItemsSource="{Binding MedicationPlans}" />
        </StackPanel>
    </Grid>
</Page>
